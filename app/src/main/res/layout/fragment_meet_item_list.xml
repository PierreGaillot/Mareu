<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MeetItemListFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="12dp"
            android:gravity="center">


                <ImageView
                    android:id="@+id/fragmentMeetItemListImgViewMeet"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@color/purple_200"/>


                <TextView
                    android:id="@+id/fragmentMeetItemListTextViewMeetTopic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_alignTop="@+id/fragmentMeetItemListImgViewMeet"
                    android:layout_toEndOf="@+id/fragmentMeetItemListImgViewMeet"
                    android:text="Reunion A"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/fragmentMeetItemListTextViewEmail"
                    app:layout_constraintStart_toEndOf="@+id/fragmentMeetItemListImgViewMeet" />

                <TextView
                    android:id="@+id/fragmentMeetItemListTextViewMeetDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/fragmentMeetItemListImgViewMeet"
                    android:layout_toEndOf="@+id/fragmentMeetItemListImgViewMeet"
                    android:text="13/02/2022 - 14h"
                    android:textSize="16dp"
                    android:layout_marginStart="12dp"
                    app:layout_constraintBottom_toTopOf="@+id/fragmentMeetItemListTextViewEmail"
                    app:layout_constraintStart_toEndOf="@+id/fragmentMeetItemListTextViewMeetTopic"
                    android:textColor="@color/material_dynamic_neutral70"
                    />


                <TextView
                    android:id="@+id/fragmentMeetItemListTextViewEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fragmentMeetItemListTextViewMeetTopic"
                    android:layout_toEndOf="@+id/fragmentMeetItemListImgViewMeet"
                    android:text="pr.gaillot@gmail.com"
                    android:layout_marginStart="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/fragmentMeetItemListImgViewMeet" />


                <ImageView
                    android:id="@+id/fragmentMeetItemListBtnDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/ic_baseline_delete_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>